<?xml version="1.0" encoding="utf-8"?>
<!--app/src/main/res/layout/activity_main.xml-->
<!--ver 1.00-54-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top buttons -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#EEE"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK" />

        <Button
            android:id="@+id/btnPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PANEL" />

        <!-- Web tab switch -->
        <Button
            android:id="@+id/btnWebMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAIN" />

        <Button
            android:id="@+id/btnWebAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUTH" />
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/codeScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#EEE"
        android:fillViewport="true"
        android:scrollbars="none"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/codeScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/codeBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp" />
    </HorizontalScrollView>


    <!-- Split position (drag handle moves this) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideSplit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58" />

    <!-- MAIN WebView -->
    <WebView
        android:id="@+id/webViewMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/codeScroll"
        app:layout_constraintBottom_toTopOf="@id/splitHandle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- AUTH WebView (device-auth URL) -->
    <WebView
        android:id="@+id/webViewAuth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/codeScroll"
        app:layout_constraintBottom_toTopOf="@id/splitHandle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Drag handle -->
    <LinearLayout
        android:id="@+id/splitHandle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#DDDDDD"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toTopOf="@id/guideSplit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:background="#888888" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="drag"
            android:textSize="10sp" />

        <!-- Slider: resize panel (0.15 - 0.95) -->
        <SeekBar
            android:id="@+id/seekSplit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />
    </LinearLayout>

    <!-- Bottom panel (tabs + content). Height is adjustable by dragging the handle -->
    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/splitHandle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ScrollView
                android:id="@+id/layoutLog"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="monospace"
                    android:padding="8dp"
                    android:textColor="#0F0" />
            </ScrollView>

            <ListView
                android:id="@+id/lvMail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <ListView
                android:id="@+id/lvInspect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layoutConfig"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/etConfig"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:gravity="top"
                    android:inputType="textMultiLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnSaveConfig"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SAVE" />

                    <Button
                        android:id="@+id/btnLoadConfig"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="LOAD" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
